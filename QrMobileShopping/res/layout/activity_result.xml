<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobileshopping.mobile.main.ResultActivity" >

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/secilendenVazgecButon"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/secileniEkleButon"
        android:layout_alignBottom="@+id/secileniEkleButon"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/vazgecbuttonshape"
        android:onClick="cancelAndReturnMain"
        android:shadowColor="#585BAD"
        android:shadowDx="6"
        android:shadowDy="-20"
        android:shadowRadius="21"
        android:text="VAZGEÃ‡"
        android:textColor="#FFFDED"
        android:textSize="30sp" />

    <Button
        android:id="@+id/secileniEkleButon"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/eklebuttonshape"
        android:onClick="addAndReturnMain"
        android:shadowColor="#585BAD"
        android:shadowDx="6"
        android:shadowDy="-20"
        android:shadowRadius="21"
        android:text="EKLE"
        android:textColor="#FFFDED"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/urunTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progressBar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/urunAdediTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/urunTextView"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/editText1"
        android:text="@string/urun_adedi_text_view" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/urunAdediTextView"
        android:layout_alignBottom="@+id/urunAdediTextView"
        android:layout_alignParentRight="true"
        android:ems="10" />

</RelativeLayout>